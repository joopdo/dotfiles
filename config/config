# S3 Config of joopdo

# Variables

## Mod key. Use Mod1 for Alt, Mod4 for Super key.
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

## Your preferred terminal emulator. I like Gnome-Terminal.
set $term /usr/bin/gnome-terminal

## Your preferred application launcher
set $menu i3-dmenu-desktop
set $menu_pass passmenu
set $browser Firefox

# APPEARANCE SETTINGS

   ## set color variables
   set $grey                #334455
   set $black               #334455
   set $white               #aacccc

   ## theme colors
   set $bg-color 	         #232D32
   set $inactive-bg-color   #334455
   set $text-color          #aacccc
   set $inactive-text-color #557788
   set $urgent-bg-color     #ee3355

   ## set window colors
   ### class                 border              background         text                 indicator
   client.focused           #73D216          #73D216          $white               $bg-color
   client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $bg-color
   client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $bg-color
   client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $bg-color
   client.background       $bg-color

#
# PROGRAM SPECIFIC CONFIGS
#
   # pixel borders remove title bars completely because of compton shadows
   for_window [title="Write:.*" class="(?i)Evolution"] floating enable
   for_window [class="(?i)Chrome"] move container to workspace $tag1
   for_window [class="(?i)Evolution"] move container to workspace $tag1
   for_window [class="^.*"] border pixel 5
   for_window [class="Feh"] fullscreen

# 
#  I3 settings
#
   #pixel perfect
   font pango:Roboto Regular 11
   new_float pixel 2
   new_window pixel 2
   # Don't follow mouse, stimulate more control and less reliance on mouse. 
   focus_follows_mouse no
#
# Key bindings
#
    # start a terminal
    bindsym $mod+Return exec $term
    # start browser
    bindsym Shift+$mod+Return exec $browser
    # kill focused window
    bindsym $mod+Shift+q kill

    # start your launcher
    bindsym $mod+d exec $menu
    bindsym $mod+Shift+d exec $menu_pass

    # reload the configuration file
    bindsym $mod+Shift+c reload

    # exit I3/sway (logs you out of your wayland session)
    bindsym $mod+Shift+e exit

    # Hotkey to set screen, wallpaper and hotplug keyboard right if session got incorrect.
    bindsym $mod+Shift+s exec ~/.dotfiles/scripts/configure-xrandr.sh ; exec feh --bg-fill ~/.wallpaper.jpg ; exec  ~/.dotfiles/scripts/keyboard-switch-super.sh ; feh --bg-fill ~/.wallpaper.jpg     

    # lock the screen
    #bindsym $mod+l exec i3lock-fancy

    #Moving around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right

    #Moving around
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Moving keys
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
#
    # ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces:
#
# MANAGE WORKSPACES

   # name the workspaces (icons require fontawesome)
   set $tag1  "1"
   set $tag2  "2"
   set $tag3  "3"
   set $tag4  "4"
   set $tag5  "5"
   set $tag6  "6"
   set $tag7  "7"
   set $tag8  "8"
   set $tag9  "9"
   set $tag10 "10"

   # switch to workspace
   bindsym $mod+1 workspace $tag1
   bindsym $mod+2 workspace $tag2
   bindsym $mod+3 workspace $tag3
   bindsym $mod+4 workspace $tag4
   bindsym $mod+5 workspace $tag5
   bindsym $mod+6 workspace $tag6
   bindsym $mod+7 workspace $tag7
   bindsym $mod+8 workspace $tag8
   bindsym $mod+9 workspace $tag9
   bindsym $mod+0 workspace $tag10

   # next/previous workspace
   # bindsym $mod+Tab       workspace back_and_forth
   bindsym $mod+Tab         workspace next
   bindsym $mod+Shift+Tab   workspace prev

   # move focused container to workspace
   bindsym $mod+Shift+1 move container to workspace $tag1
   bindsym $mod+Shift+2 move container to workspace $tag2
   bindsym $mod+Shift+3 move container to workspace $tag3
   bindsym $mod+Shift+4 move container to workspace $tag4
   bindsym $mod+Shift+5 move container to workspace $tag5
   bindsym $mod+Shift+6 move container to workspace $tag6
   bindsym $mod+Shift+7 move container to workspace $tag7
   bindsym $mod+Shift+8 move container to workspace $tag8
   bindsym $mod+Shift+9 move container to workspace $tag9
   bindsym $mod+Shift+0 move container to workspace $tag10

#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b split;exec notify-send 'horizontal split'
  #  bindsym $mod+v splitv;exec notify-send 'vertical split'

    # Switch the current container between different layout styles
    #bindsym $mod+q layout stacking
    bindsym $mod+w layout tabbed;exec notify-send 'tabbing'
    bindsym $mod+q layout toggle split;exec notify-send 'split'

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen; exec feh --bg-fill ~/.wallpaper.jpg  

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # move focus to the parent container
    bindsym $mod+a focus parent;exec notify-send 'focus parent'

#
# Switching:
#
    # Workspace back and forth (with/without active container) - useful when on one screen.
    workspace_auto_back_and_forth yes
    bindsym $mod+c workspace back_and_forth;exec notify-send 'back and forth'
#
# Scratchpad:
#
    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
    mode "resize" {
    bindsym $left resize shrink width 10 px or 10 ppt
    bindsym $down resize grow height 10 px or 10 ppt
    bindsym $up resize shrink height 10 px or 10 ppt
    bindsym $right resize grow width 10 px or 10 ppt

    # ditto, with arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    }
    bindsym $mod+r mode "resize"

#
# Make the volume buttons work
#

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume $(pacmd list-sinks |awk '/* index:/{print $3}') +5% && pkill -SIGRTMIN+15 i3blocks
 bindsym XF86AudioLowerVolume exec pactl set-sink-volume $(pacmd list-sinks |awk '/* index:/{print $3}') -5% && pkill -SIGRTMIN+15 i3blocks
 bindsym XF86MonBrightnessDown exec dsplight down 5 && pkill -SIGRTMIN+15 i3blocks
 bindsym XF86MonBrightnessUp exec dsplight up 5 && pkill -SIGRTMIN+15 i3blocks

#
# Status Bar:
#
    bar {
    mode hide
    hidden_state hide
    modifier $mod
    status_command      i3pystatus -c /home/ANT.AMAZON.COM/joopd/.config/i3pystatus.conf	
    tray_padding         3
    font pango:Roboto    9
 	colors {
 		# whole color settings
 		background   $black
 		statusline   $white
 		separator    $grey
 
# 		# type             border      backgr.     font
 		focused_workspace  $grey       $white      $black
 		active_workspace   $grey       $white      $black
 		inactive_workspace $grey       $black      $white
 		urgent_workspace   $valencia   $valencia   $black
               }
position top
        }

#
# Execute on boot
#

    exec --no-startup-id dunst
    exec --no-startup-id feh --bg-fill ~/.wallpaper.jpg
    exec --no-startup-id compton -cCGfF -b -i 0.75 --vsync glx
    exec --no-startup-id nm-applet
    exec --no-startup-id ~/.dotfiles/scripts/keyboard-switch-super.sh
    exec --no-startup-id /usr/bin/sh /home/joop/.xinitrc
    exec --no-startup-id /usr/bin/xmodmap /home/joop/.Xmodmap 
    exec --no-startup-id /usr/bin/sh /home/ANT.AMAZON.COM/joopd/.dotfiles/scripts/configure-xrandr.sh
    exec --no-startup-id /usr/lib/gsd-xsettings
    exec --no-startup-id gnome-power-manager
    exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
    exec --no-startup-id /usr/bin/gnome-keyring-daemon --start --components=secrets
    exec --no-startup-id /usr/local/amazon/sbin/acmed-session.sh
    exec --no-startup-id /usr/bin/user-hooks
    exec --no-startup-id /usr/bin/google-chrome --app=https://app.chime.aws/  
    exec --no-startup-id /usr/bin/redshift 0.6
    exec --no-startup-id ~/.dotfiles/scripts/configure-xrandr.sh
    exec --no-startup-id java -cp /opt/LanguageTool-4.9/languagetool-server.jar org.languagetool.server.HTTPServer --port 8081 --allow-origin "*"
