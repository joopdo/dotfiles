# Window-Related Bindings
  bindsym $mod+q kill
#bindsym $mod+d exec dmenu
bindsym $mod+shift+d exec passmenu 
 bindsym $mod+h focus left
  bindsym $mod+j focus down
  bindsym $mod+k focus up
  bindsym $mod+l focus right
# Alternatively, you can use the cursor keys:
 bindsym $mod+Left focus left
 bindsym $mod+Down focus down
 bindsym $mod+Up focus up
 bindsym $mod+Right focus right

  bindsym $mod+Shift+h move left
  bindsym $mod+Shift+j move down
  bindsym $mod+Shift+k move up
  bindsym $mod+Shift+l move right
# Alternatively, you can use the cursor keys:
 bindsym $mod+Shift+Left focus left
 bindsym $mod+Shift+Down focus down
 bindsym $mod+Shift+Up focus up
 bindsym $mod+Shift+Right focus right
 

# Workspace back and forth (with/without active container)
 workspace_auto_back_and_forth yes
 bindsym $mod+c workspace back_and_forth;exec notify-send 'back and forth'
 bindsym $mod+Shift+c move container to workspace back_and_forth; workspace back_and_forth

# Split in horizontal orientation
bindsym $mod+g split h;exec notify-send 'split horizontally'
# Split in vertical orientation
bindsym $mod+v split v;exec notify-send 'split vertically'

  bindsym $mod+Shift+space floating toggle;exec notify-send 'floating'
  bindsym $mod+f fullscreen toggle
# Change container layout (stacked, tabbed, toggle split)
 bindsym $mod+s layout stacking;exec notify-send 'stacking'
 bindsym $mod+w layout tabbed;exec notify-send 'tabbed'
 bindsym $mod+e layout toggle split;exec notify-send 'split'
#
#
 #bindsym $mod+Shift+h split h
  bindsym $mod+space focus mode_toggle
  bindsym $mod+r mode "  ";exec notify-send 'resize'
  mode "  " {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym Escape mode "default"
  }

